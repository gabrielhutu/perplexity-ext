{
	"compilerOptions": {
	  "lib": ["ES2022", "DOM"],
	  "module": "commonjs",
	  "target": "ES2022",
	  "outDir": "out",
	  "sourceMap": true,
	  "rootDir": "src",
	  "strict": true,
	  "types": ["vscode", "node", "mocha"],
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }
  